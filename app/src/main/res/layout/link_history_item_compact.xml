            <!--android:adjustViewBounds="true"-->
            <!--android:gravity="center_vertical"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:background="@drawable/default_layout_selector_gray" />-->
    </LinearLayout>
</RelativeLayout>