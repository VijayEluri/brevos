<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutHistoryWrapper"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:clickable="true"
    android:focusable="true"
    android:transitionName="@string/transition_link_item"
    android:background="?android:attr/selectableItemBackground">
    <!--android:background="@drawable/ripple_green">-->

    <FrameLayout
        android:id="@+id/frameLayoutHistoryClicksWrapper"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="40dp"
        android:paddingLeft="@dimen/material_keyline_1"
        android:paddingStart="@dimen/material_keyline_1"
        android:paddingRight="@dimen/material_padding"
        android:paddingEnd="@dimen/material_padding"
        android:gravity="center_vertical">

        <ProgressBar
            android:id="@+id/progressHistoryClicks"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="@dimen/progress_padding"
            android:layout_marginRight="@dimen/progress_padding"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:indeterminate="true"
            android:indeterminateOnly="true"
            android:background="@drawable/gray_circle"
            style="?android:attr/progressBarStyleSmall" />

        <TextView
            android:id="@+id/textViewHistoryClicks"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:text="@string/default_click_count"
            android:padding="@dimen/material_padding"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:minWidth="40dp"
            android:background="@drawable/gray_circle"
            android:visibility="visible" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/material_keyline_2_offset"
        android:layout_marginStart="@dimen/material_keyline_2_offset"
        android:paddingLeft="@dimen/material_padding_half"
        android:paddingStart="@dimen/material_padding_half"
        android:paddingRight="@dimen/material_keyline_1"
        android:paddingEnd="@dimen/material_keyline_1"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/textViewHistoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginBottom="@dimen/material_padding_half"
            android:text="@string/placeholder_title"
            android:gravity="start|center_vertical"
            android:textColor="@color/gray_dark"
            android:textStyle="bold"
            android:maxLines="1"
            android:minHeight="24dp"
            android:singleLine="true"
            android:textSize="@dimen/material_type_small" />
        <TextView
            android:id="@+id/textViewHistoryUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="@string/placeholder_url_long"
            android:gravity="start|center_vertical"
            android:textColor="@color/gray_dark"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>