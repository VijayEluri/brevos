<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/primary"
    android:id="@+id/coordinatorLayoutMainContainer"
    tools:context="com.thunsaker.brevos.ui.LinkInfoActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarCreate"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:fitsSystemWindows="true">

        <android.support.v7.widget.Toolbar
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/Theme.AppCompat.Light.NoActionBar"
            android:minHeight="?attr/actionBarSize"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:paddingRight="@dimen/material_keyline_1"
            android:paddingEnd="@dimen/material_keyline_1"
            android:paddingLeft="@dimen/material_keyline_1"
            android:paddingStart="@dimen/material_keyline_1"
            android:src="@drawable/chart_lines" />
    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>