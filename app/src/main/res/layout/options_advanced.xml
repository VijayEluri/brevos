<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutOptionsWrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/gray_translucent"
    android:layout_below="@+id/linearLayoutMainWrapper"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:visibility="gone"
    tools:showIn="@layout/activity_main">

    <ImageButton
        android:id="@+id/imageButtonOptionsCollapse"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/btn_collapse"
        style="?android:attr/buttonBarButtonStyle"
        android:background="@drawable/default_layout_selector"
        android:contentDescription="@string/button_collapse" />

    <Spinner
        android:id="@+id/spinnerOptionsDomainList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:spinnerMode="dropdown"
        android:prompt="@string/domain_select"
        android:entries="@array/bitly_domain_options" />

    <ToggleButton
        android:id="@+id/toggleButtonOptionsPrivateUrl"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/toggle_private_lock"
        style="?android:attr/buttonBarButtonStyle"
        android:textOff=""
        android:textOn=""
        android:text="" />
</LinearLayout>